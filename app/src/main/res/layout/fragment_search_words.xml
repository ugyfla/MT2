<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="10dp">

        <EditText
            android:id="@+id/editText"
            android:layout_width="330dp"
            android:layout_height="50dp"
            android:layout_marginStart="15dp"
            android:background="@drawable/search_background"
            android:drawableTint="@android:color/darker_gray"
            android:hint="@string/searchwords"
            android:imeOptions="actionSearch"
            android:inputType="text"
            android:paddingStart="80dp"
            android:paddingEnd="20dp"
            android:privateImeOptions="actionSearch"
            android:singleLine="true"
            android:textColorHint="@android:color/darker_gray"
            android:textSize="22sp" />

        <Button
            android:id="@+id/searchbtn"
            app:backgroundTint="#FFFFFF"
            android:layout_width="50dp"
            android:layout_height="wrap_content"
            android:baselineAligned="false"
            android:drawableLeft="@drawable/searchbtn"
            android:paddingStart="10dp"
            android:textColor="#00897B"
            android:contentDescription="@string/searchbtn"/>


    </LinearLayout>

    <ListView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="70dp"
        android:layout_marginHorizontal="20dp"
        android:divider="#DAE1E0"
        android:dividerHeight="5dp"
        tools:listitem="@layout/listview_design"/>
</FrameLayout>